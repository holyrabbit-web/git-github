/* pages/joke/joke.wxss */
page{
  background-color: #dedede;
}

.swiper-tab {
  width: 100%;
  height: 60rpx;
  position:fixed;
  top: 0;
  left: 0;
  border-bottom: 2rpx solid #777;
  display: flex;
  white-space: nowrap;
  background-color: white;
  z-index: 100;
}

.tab-item {
  margin: 0 10rpx;
  padding-top: 15rpx;
  font-size: 24rpx;
  color: #777;
  width: 33%;
  text-align: center;
}

.on {
  color: cadetblue;
  border-bottom: 10rpx solid hotpink;
}


.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  top: 60rpx;
}

.item{
 width: 100%;

 margin-top: 20px;
}

.head {
display: flex;
flex-flow: nowrap;
}
.line{height: 2rpx;background-color: green;}
.head image {
width: 80rpx;
height: 80rpx;
border-radius: 50%;
margin: 20rpx;
}

.head .nickname {
font-size: 28rpx;
color: gray;

margin-top: 50rpx;
}

.title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;

}

.content {
  width: 710rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  margin: auto;
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
}

.content-bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  filter: blur(40rpx);
  border-radius: 10rpx;
}
.content video{
  position: relative;
  left: 0;
  z-index: 1;
  margin: auto;
}
